<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="102dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewDoctorImage"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@id/imageViewDoctorImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Dr. Kathryn Murphy" />

            <TextView
                android:id="@+id/textViewDoctorDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/textViewDoctorName"
                app:layout_constraintTop_toBottomOf="@id/textViewDoctorName"
                tools:text="Dentist" />

            <TextView
                android:id="@+id/textViewDoctorHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/textViewDoctorDepartment"
                app:layout_constraintStart_toEndOf="@id/textViewDoctorDepartment"
                tools:text="Stillwater Clinic" />

            <TextView
                android:id="@+id/textViewAppointmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/textViewDoctorDepartment"
                app:layout_constraintTop_toBottomOf="@id/textViewDoctorDepartment"
                tools:text="24.04.2021 - 13:15" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
